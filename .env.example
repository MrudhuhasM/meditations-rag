# =============================================================================
# MEDITATIONS RAG - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_APP_NAME=meditations-rag
APP_APP_VERSION=0.1.0
APP_ENVIRONMENT=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
APP_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
APP_API_KEY=your-api-key-here

# =============================================================================
# LOGGING
# =============================================================================
LOGGING_LOG_LEVEL=DEBUG
LOGGING_LOG_CONSOLE_ENABLED=true
LOGGING_LOG_FILE_ENABLED=true
LOGGING_LOG_FILE_PATH=logs/app.log

# =============================================================================
# RAG SETTINGS
# =============================================================================
RAG_LLM_PROVIDER=gemini
RAG_STRONG_LLM_PROVIDER=gemini
RAG_EMBEDDING_PROVIDER=local
RAG_BUFFER_SIZE=5
RAG_BREAK_POINT_THRESHOLD=95
RAG_CHUNK_EMBED_BATCH_SIZE=32
RAG_MAX_CONCURRENT_REQUESTS=5
RAG_FAILURE_THRESHOLD=0.2
RAG_BATCH_SIZE=32
RAG_EMBEDDING_DIMENSION=1024
RAG_METADATA_EXTRACTION_ENABLED=true
RAG_METADATA_BATCH_SIZE=10
RAG_METADATA_MAX_CONCURRENT=5

# Retrieval Settings
RAG_RETRIEVAL_TOP_K=6
RAG_RETRIEVAL_QUESTION_TOP_K=10
RAG_RETRIEVAL_ALPHA=0.3
RAG_RETRIEVAL_METADATA_TOP_K=5
RAG_RETRIEVAL_METADATA_ENABLED=true
RAG_RETRIEVAL_KEYWORD_BOOST=0.05
RAG_RETRIEVAL_TOPIC_BOOST=0.15
RAG_RETRIEVAL_CONCEPT_BOOST=0.10
RAG_RETRIEVAL_PRACTICE_BOOST=0.10

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_LLM_MODEL_NAME=gpt-4o-mini
OPENAI_EMBEDDING_MODEL_NAME=text-embedding-3-small
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048
OPENAI_REASONING_ENABLED=true
OPENAI_RATE_LIMIT_ENABLED=true
OPENAI_RATE_LIMIT_REQUESTS_PER_MINUTE=500
OPENAI_RATE_LIMIT_TOKENS_PER_MINUTE=150000

# =============================================================================
# GEMINI CONFIGURATION
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_API_BASE=https://generativelanguage.googleapis.com/v1beta
GEMINI_LLM_MODEL_NAME=gemini-2.5-pro
GEMINI_EMBEDDING_MODEL_NAME=text-embedding-004
GEMINI_TIMEOUT=60
GEMINI_MAX_RETRIES=3
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048
GEMINI_REASONING_ENABLED=true
GEMINI_RATE_LIMIT_ENABLED=true
GEMINI_RATE_LIMIT_REQUESTS_PER_MINUTE=10
GEMINI_RATE_LIMIT_REQUESTS_PER_DAY=1500

# =============================================================================
# LOCAL LLM CONFIGURATION
# =============================================================================
LOCAL_LLM_API_BASE_URL=http://localhost:8080/v1
LOCAL_LLM_API_EMBEDDING_BASE_URL=http://localhost:8081/v1
LOCAL_LLM_API_KEY=not-needed
LOCAL_LLM_LLM_MODEL_NAME=local-model
LOCAL_LLM_EMBEDDING_MODEL_NAME=local-embedding
LOCAL_LLM_TIMEOUT=120
LOCAL_LLM_MAX_RETRIES=3
LOCAL_LLM_TEMPERATURE=0.7
LOCAL_LLM_MAX_TOKENS=2048
LOCAL_LLM_REASONING_ENABLED=true

# =============================================================================
# QDRANT CONFIGURATION
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_MAIN_COLLECTION_NAME=meditations
QDRANT_QUESTION_COLLECTION_NAME=meditations_questions

# =============================================================================
# OPENROUTER CONFIGURATION
# =============================================================================
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_LLM_MODEL_NAME=x-ai/grok-4.1-fast
OPENROUTER_TIMEOUT=30
OPENROUTER_MAX_RETRIES=3
OPENROUTER_MAX_TOKENS=2048
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_HTTP_REFERER=
OPENROUTER_X_TITLE=
OPENROUTER_RATE_LIMIT_ENABLED=true
OPENROUTER_RATE_LIMIT_REQUESTS_PER_MINUTE=20
OPENROUTER_RATE_LIMIT_TOKENS_PER_MINUTE=100000
